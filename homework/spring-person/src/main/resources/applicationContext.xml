<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="teacher" class="oddeye.pojo.Teacher">
        <property name="tid" value="10010" />
        <property name="tname" value="xl" />
    </bean>
    <bean id="student1" class="oddeye.pojo.Student">
        <property name="sid" value="1801" />
        <property name="sname" value="Jack" />
    </bean>

    <bean id="student2" class="oddeye.pojo.Student">
        <property name="sid" value="1802" />
        <property name="sname" value="Rose" />
    </bean>

    <bean id="student3" class="oddeye.pojo.Student">
        <property name="sid" value="1803" />
        <property name="sname" value="Tom" />
    </bean>

    <bean id="classroom" class="oddeye.pojo.Classroom">
        <property name="cid" value="327"/>
        <property name="cname" value="A7-327"/>
        <property name="teacher" ref="teacher"/>

        <property name="classList">
            <list>
                <value>高数</value>
                <value>英语</value>
                <value>Java</value>
            </list>
        </property>
        <property name="studentSet">
            <set>
                <ref bean="student1"/>
                <ref bean="student2"/>
                <ref bean="student3"/>
            </set>
        </property>
        <property name="studentMap">
            <map>
                <entry key="1801" value-ref="student1"/>
                <entry key="1802" value-ref="student2"/>
                <entry key="1803" value-ref="student3"/>
            </map>
        </property>

    </bean>

    <context:component-scan base-package="oddeye.pojo"/>

</beans>